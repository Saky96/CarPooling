<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.parleen.carpooling.HomeActivity"
    android:orientation="vertical">
    <TextView
        android:id="@+id/welcomeUsername"
        android:text=""
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONNECTED CARS"
        android:textSize="30dp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        />

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/c"
        />
    <Button
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Pool my Car"
        android:textColor="#fff"
        android:textSize="25dp"
        android:textStyle="bold"
        android:id="@+id/buttonPool"
        android:background="@drawable/button_blue"/>
    <Button
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:id="@+id/buttonFindRide"
        android:layout_height="wrap_content"
        android:text="Find Friendly Ride"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="25dp"
        android:background="@drawable/button_blue"/>

    <Button
        android:id="@+id/buttonSignout"
        android:text="signout"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</LinearLayout>
